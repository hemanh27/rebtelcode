<!-- Script to load countries -->
<script>
    $(document).ready(function(){
        $.getJSON('/js/json/country-codes.json',function(data){
            $.each(data.countries, function(key,val){
                $('#countryList').append('<option id="' + val.code + '" value="'+ val.name.toLowerCase() +'">' + val.name + '</option>');
            });
        });
        $('#countryList').val = '';
        $('#searchCountry').innerHTML = '';
    });
</script>
