<div class="jumbotron text-center">
    <h1 class="display-3">
        {{title}}
    </h1>
    <p class="lead">Get to know some interesting facts about a country of your choice.</p>
    <div class="clo-md-6 col-lg-6 mx-auto">
        <form action="/" method="POST">
            <div class="form-group">
                <label for="countryList"> Select Country</label>
                <select id="countryList" name="countryList" class="form-control">
                    <option value="" selected disabled hidden>Choose here</option>
                </select>
            </div>

            <div class="strike">
                <span>or</span>
            </div>

            <div class="form-group">
                <label for="country"> Search for a Country</label>
                <input type="text" id="searchCountry" name="searchCountry" placeholder="Enter a country" class="form-control" />
            </div>

            <button type="submit" class="btn btn-block">Submit</button>
        </form>
    </div>
</div>
{{#each data}}
    <div class="container">
        <div class="row">
            <div class="col-sm-8 country-main">
                <div class="country-post">
                    <h1 class="country-title">{{this.name}}</h1>
                    <p class="lead country-description">Native Name: {{this.nativeName}}</p>
                </div>
            </div>

            <div class="col-sm-3 offset-sm-1 country-sidebar">
                <div class="sidebar-module sidebar-module-inset">
                    <img src="{{this.flag}}" alt="Country Flag" class="img-fluid">
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-sm-12">
                <h3 class="text-center">Demographic Information:</h3>
                <p>Capital: {{this.capital}}</p>
                <p>Population: {{this.population}}</p>
                <p>Area: {{this.area}} m<sup>2</sup></p>
                <p>Dialing Code: {{this.callingCodes}}</p>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-sm-12">
                <h3 class="text-center">Borders:</h3>
                {{#each this.borders}}
                    <a href="https://restcountries.eu/rest/v2/alpha/{{this}}"> {{this}}</a>
                {{/each}}
            </div>
        </div>
    </div>
{{/each}}